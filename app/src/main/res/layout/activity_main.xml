<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/amount"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:layout_weight="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/edtAmount"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/currency_type"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:layout_weight="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/edtCurrencyType"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_32"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/usd" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_24"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buying"
                android:textColor="@color/colorBlueGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBuying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="-"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
